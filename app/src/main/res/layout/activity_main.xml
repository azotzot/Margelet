<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		tools:context=".activities.MainActivity"
		android:background="#2196F3"
		android:layout_height="match_parent"
		android:layout_width="match_parent">

	<Button
			android:id="@+id/connectButton"
			android:text="Connect"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="testConnect"
			app:layout_constraintStart_toStartOf="@+id/loadButton"
			android:layout_marginStart="5dp"
			android:layout_marginBottom="28dp"
			app:layout_constraintBottom_toTopOf="@+id/loadButton"/>

	<Button
			android:id="@+id/loadButton"
			android:text="send data"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"

			android:onClick="testDate"
			android:layout_marginEnd="5dp"
			android:layout_marginBottom="17dp"
			app:layout_constraintEnd_toEndOf="@+id/disconnectButton"
			app:layout_constraintBottom_toTopOf="@+id/disconnectButton"/>

	<Button
			android:id="@+id/disconnectButton"
			android:text="Disconnect"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="testDisconnect"
			app:layout_constraintStart_toStartOf="@+id/changeButton"
			android:layout_marginStart="15dp"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="155dp"/>

	<Button
			android:id="@+id/changeButton"
			android:text="changeactivity"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="change"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginTop="39dp"
			app:layout_constraintTop_toBottomOf="@+id/disconnectButton"
			app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>